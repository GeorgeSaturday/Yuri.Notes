@model IEnumerable<Yuri.Notes.DB.Note>

<h2>Все заметки</h2>



<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Автор")
        </th>
        <th>
            @Html.DisplayName("Имя")
        </th>
        <th>
            @Html.DisplayName("Тэги")
        </th>
        <th>
            @Html.DisplayName("Дата/Время")
        </th>
        <th>
            @Html.DisplayName("Файл")
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Author.Login)
        </td>
        <td>
            @{
                var name = item.Name.Length > 30 ? item.Name.Substring(0, 30) + "..." : item.Name;
            }
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tags)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            <img onclick="" src="~/Content/dwnldiсon.png" alt="Button" height="20" width="20" />
        </td>
     
    </tr>
    }

</table>

