@model IEnumerable<Yuri.Notes.DB.Note>

<h2>Мои заметки</h2>

<p>
    @Html.ActionLink("Новая заметка", "CreateNote", "Notes")
</p>

<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.Name)*@
            @Html.DisplayName("Имя")
        </th>
        <th>
            @Html.DisplayName("Тэги")
        </th>
        <th>
            @Html.DisplayName("Опубликовано")
        </th>
        <th>
            @Html.DisplayName("Дата/Время")
        </th>
        <th>
            @Html.DisplayName("Файл")
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @{
                var name = item.Name.Length > 30 ? item.Name.Substring(0, 30) + "..." : item.Name;
            }
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tags)
        </td>
        <td>
            <input type="checkbox" onclick="" id="@item.Id" checked="@item.Draft" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            <img onclick="" src="~/Content/dwnldiсon.png" alt="Button" height="20" width="20" />

            
        </td>
        <td>
            @Html.ActionLink("Edit", "Notes", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
    }

</table>

